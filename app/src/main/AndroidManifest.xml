<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bbs_app">
    <!--允许联网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--获取GSM（2g）、WCDMA（联通3g）等网络状态的信息  -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!--获取sd卡写的权限，用于文件上传和下载-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!--允许读取手机状态 用于创建BmobInstallation-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="adjustPan|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".User_Login"
            android:windowSoftInputMode="adjustPan|stateHidden"/>
        <activity android:name=".User_Register"/>
        <activity android:name=".My_collection"/>
        <activity android:name=".Show_search_cards"/>
        <activity android:name=".Show_card_content"/>
        <activity android:name=".personalInformationActivity"/>
        <activity android:name=".ResetpasswordActivity"/>
        <activity android:name=".ResetusernamesActivity"/>
        <activity android:name=".User_post_card"/>
        <activity android:name=".CheckedActivity"/>
        <activity android:name=".ListViewActivity"/>
        <activity android:name=".PublicMessageActivity"/>
        <activity android:name=".SendMessageActivity"/>
        <activity android:name=".logoff"/>
    </application>

</manifest>
