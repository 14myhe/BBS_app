<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#fff">

    <Button
        android:id="@+id/home"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"
        android:background="@mipmap/user_login"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录"
        android:textColor="#f56606"
        android:layout_toRightOf="@+id/home"/>


    <Button
        android:id="@+id/collection"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:background="@mipmap/tab_main"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#f56606"
        android:text="主页"
        android:layout_toRightOf="@+id/collection"/>

    <Button
        android:id="@+id/set"
        android:layout_width="40dp"
        android:layout_height="33dp"
        android:layout_toLeftOf="@+id/set_text"
        android:background="@mipmap/set" />

    <TextView
        android:id="@+id/set_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#f56606"
        android:text="设置"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_gravity="center_horizontal"/>

</RelativeLayout>

