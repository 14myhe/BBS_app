<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
  >
    <!--点击图片查看整篇帖子的内容-->
    <TextView
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:id="@+id/shop_no"
        android:textColor="#f56606"
        android:text="1"
        android:layout_below="@+id/add_shop_time"
        android:layout_toLeftOf="@+id/price_textview"
        android:layout_toStartOf="@+id/price_textview" />
    <TextView
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:background="@mipmap/shop_icon"
        android:id="@+id/shop_textview"
        android:textColor="#f56606"
        android:layout_marginLeft="92dp"
        android:layout_marginStart="90dp"
        android:layout_below="@+id/add_shop_time"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:id="@+id/show_title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:text="篮球鞋"
        android:layout_alignTop="@+id/shop_textview"
        android:layout_alignLeft="@+id/shopprice"
        android:layout_alignStart="@+id/shopprice" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/price_icon"
        android:id="@+id/price_textview"
        android:layout_alignTop="@+id/shopprice"
        android:layout_toLeftOf="@+id/shopprice"
        android:layout_toStartOf="@+id/shopprice" />
    <TextView
        android:id="@+id/shopprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50.0"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_alignTop="@+id/detail"
        android:layout_toRightOf="@+id/shop_textview"
        android:layout_toEndOf="@+id/shop_textview" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="一戳看帖>>"
        android:id="@+id/detail"
        android:layout_below="@+id/collection_card"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:id="@+id/add_shop_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-12-08 18：29"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/publish"
        android:layout_toStartOf="@+id/publish" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发布"
        android:id="@+id/publish"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:id="@+id/collection_card"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="收藏"
        android:textSize="10dp"
        android:textColor="#f56606"
        android:background="@mipmap/collection"
        android:layout_marginRight="26dp"
        android:layout_marginEnd="26dp"
        android:layout_below="@+id/add_shop_time"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>

